}

SHARED_TASK_2023_VAL_LANGS = {
    "als": "ALS", "aze": "AZ", "tur": "TR", "yor": "YO"
}


ENTS = ["PER", "ORG", "LOC", "DATE"]

TAG_LIST = [
    "O", "B-PER", "I-PER", "B-ORG", "I-ORG", "B-LOC", "I-LOC", "B-DATE",
    "I-DATE"]

SPACY_TYPES = ["PERSON", "ORG", "LOC", "DATE", "GPE", "TIME"]


rule all:
    input:
        expand("task_experiments/spacy/{lang}/{split}.eng-tags",
               lang=SHARED_TASK_2023_VAL_LANGS.keys(),
               split=["validation", "test"]),


localrules: prepare_submission_conll, output_as_conll, download_test, download_2023_validation

